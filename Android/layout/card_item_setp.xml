<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:elevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardGrey"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/lblPlatform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform: 1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Location"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblPlatform" />

        <TextView
            android:id="@+id/lblD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Destination:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblLocation" />

        <TextView
            android:id="@+id/lblDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="London"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblD" />

        <TextView
            android:id="@+id/lblDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="70dp"
            android:text="1hr 40mins"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/lblDtime"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblStops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Stop"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/lblDuration"
            app:layout_constraintStart_toStartOf="@+id/lblDuration"
            app:layout_constraintTop_toBottomOf="@+id/lblDuration" />

        <TextView
            android:id="@+id/lblD2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Time:"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/lblDtime"
            app:layout_constraintStart_toStartOf="@+id/lblDtime"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblDtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="20:07"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblD2" />

        <TextView
            android:id="@+id/lblDtimeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Time"
            android:textColor="@color/locGreen"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/lblDtime"
            app:layout_constraintStart_toStartOf="@+id/lblDtime"
            app:layout_constraintTop_toBottomOf="@+id/lblDtime" />

        <TextView
            android:id="@+id/lblA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Arrival Time:"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/lblAtime"
            app:layout_constraintStart_toStartOf="@+id/lblAtime"
            app:layout_constraintTop_toBottomOf="@+id/lblDtimeStatus" />

        <TextView
            android:id="@+id/lblAtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="21:47"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblA1" />

        <TextView
            android:id="@+id/lblAtimeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Time"
            android:textColor="@color/locGreen"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/lblAtime"
            app:layout_constraintStart_toStartOf="@+id/lblAtime"
            app:layout_constraintTop_toBottomOf="@+id/lblAtime" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>